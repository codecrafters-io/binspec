  <div class="flex flex-col items-center min-h-0 justify-stretch">
    <h2 class="mb-4 text-2xl font-medium text-white">SQLite File Format</h2>
    <div
      class="rounded-md border border-zinc-700/60 flex-grow overflow-auto p-2"
      id="raw-container"
      {{click-outside this.handleClickOutside}}
    >
      <HexPreview
        @section="raw"
        @data={{this.sampleData}}
        @segments={{this.sampleSegments}}
        @highlightedSegment={{this.highlightedSegment}}
        @onSegmentSelect={{fn this.handleSegmentSelected "raw"}}
        @onSegmentMouseEnter={{fn this.handleSegmentMouseEnter "raw"}}
        @onSegmentMouseLeave={{fn this.handleSegmentMouseLeave "raw"}}
      />

      {{#if this.highlightedSegment}}
        <div class="rounded-md border border-zinc-700/60 p-3 w-full mt-2">
          <DataSegmentDetails
            @data={{this.sampleData}}
            @segment={{this.highlightedSegment}}
            @onSegmentSelect={{fn this.handleSegmentSelected "raw"}}
            @onSegmentMouseEnter={{fn this.handleSegmentMouseEnter "raw"}}
            @onSegmentMouseLeave={{fn this.handleSegmentMouseLeave "raw"}}
          />
        </div>
      {{/if}}
    </div>
  </div>
